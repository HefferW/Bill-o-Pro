@{
    ViewData["Title"] = "Items";
}

<a class="btn btn-primary" asp-controller="Item" asp-action="ShowItemDetails">Kunden anlegen / editieren</a>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Unit</th>
            <th scope="col">Price</th>
            <th scope="col">Tax</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>

        @{
            foreach (Item item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Unit</td>
                    <td>@item.Price</td>
                    <td>@item.Tax</td>
                    <td>
                        <a asp-route-id="@item.Id" asp-controller="Item" asp-action="ShowItemDetails" class="btn btn-warning">Edit</a>
                    </td>
                </tr>
            }
        }

    </tbody>

</table>